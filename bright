#!/bin/bash

f_lenovo=/sys/devices/pci0000:00/0000:00:02.0/drm/card0/card0-eDP-1/intel_backlight/brightness
if [ -e $f_lenovo ]; then
    f=$f_lenovo
fi
curr=$(sudo cat $f)

if [ "x$1" == "x-" ]; then
    op='/'
else
    op='*'
fi
new_val=$(echo "flr($curr $op 2)" | bc)
sudo /bin/bash -c "echo $new_val > $f"
