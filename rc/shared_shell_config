function mkscope {
    find . -type f -name '*.h' -o -name '*.c' -o -name '*.y' -o -name '*.l' -o -name '*.hpp' -o -name '*.cpp' -o -name '*.cc' -o -name '*.hh' > cscope.files
    cscope -b -q
}
