function scr() {
    local screen_layouts=~/.screenlayout;
    if [ $# -ne 1 ]; then
        echo "Please identify configuration to use, possible options are:"
        for i in find $screen_layouts -name '*.sh'; do
            echo "- $i" | sed -e 's/\.sh//g'
        done
    else
        local recipe=$screen_layouts/$1.sh
        if [ -f $recipe ]; then
            echo "Running $recipe"
            $recipe
        else 
            echo "Recipe $recipe does not exist"
        fi
    fi
}

