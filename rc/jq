  | .key = (.key | sup_grp_id)
  | .key = (if can_snap_id[.key] then can_snap_id[.key] else .key end);


def group_by_key_and_sum:
  .
  | group_by(.key)
  | map({ key: .[0].key,
          value: (map(.value) | add) })
  | from_entries;

