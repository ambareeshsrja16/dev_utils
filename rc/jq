  . | with_entries(.key=(.key | fromjson | join("/")));

def loc_id:
  . | split("/")[0];

def sup_grp_id:
  . | split("/")[1];

def sub_grp_id:
  . | split("/")[2];

def change_grp_key_to_snappable(can_snap_id):
